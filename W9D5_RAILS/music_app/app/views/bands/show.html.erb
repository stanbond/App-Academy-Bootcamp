<h1> <%=@band.name%> </h1>

<h3>Albums:</h3>
<ul>
  <%= render @albums %>
</ul>

<%= button_to "Add Album", new_band_album_url(@band), method: 'get' %>
<br>
<%= button_to "Edit Band", edit_band_url(@band), method: 'get' %>
<br>
<%= button_to "Delete Band", band_url(@band), method: 'delete' %>

<h1 class='page-header'>Bands</h1>

<ul class='main-list'>
  <% @bands.each do |band| %>
    <li><a href="<%= band_url(band) %>"><p><%= band.name %></p></a></li>
  <% end %>
</ul>

<h4 class='sub-header'>Links</h4>
<ul class='page-links'>
  <li><a class='button' href="<%= new_band_url %>" >New band</a></li>
</ul>
